<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/borg_common_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="标题:" />

                <EditText
                    android:id="@+id/borg_et_task_title"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="描述:" />

                <EditText
                    android:id="@+id/borg_et_task_description"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="目标:" />

                <EditText
                    android:id="@+id/borg_et_task_target"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="步骤:" />

                <EditText
                    android:id="@+id/borg_et_task_step"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/borg_common_textview"
                        android:text="重要程度:" />

                    <EditText
                        android:id="@+id/borg_et_task_importantIdex"
                        style="@style/borg_common_edit_text"
                        android:focusable="false"
                        android:editable="false"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/borg_common_textview"
                        android:text="紧急程度:" />

                    <EditText
                        android:id="@+id/borg_et_task_urgentIdex"
                        style="@style/borg_common_edit_text"
                        android:focusable="false"
                        android:editable="false"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="估计用时:" />

                <EditText
                    android:id="@+id/borg_task_timeEstimated"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/borg_view_task_timeUsed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="实际用时:" />

                <EditText
                    android:id="@+id/borg_et_task_timeUsed"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/borg_view_task_timeCreate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="创建时间:" />

                <EditText
                    android:id="@+id/borg_et_task_timeCreate"
                    android:enabled="false"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/borg_view_task_timeStart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="开始时间:" />

                <EditText
                    android:id="@+id/borg_et_task_timeStart"
                    android:enabled="false"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/borg_view_task_timeStop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="结束时间:" />

                <EditText
                    android:id="@+id/borg_et_task_timeStop"
                    android:enabled="false"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/borg_common_textview"
                    android:text="评分:" />

                <EditText
                    android:id="@+id/borg_et_task_score"
                    style="@style/borg_common_edit_text" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/borg_btn_task_save"
            android:text="保存"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/borg_btn_task_start"
            android:text="开始"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/borg_btn_task_pause"
            android:text="暂停"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/borg_btn_task_resume"
            android:text="继续"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/borg_btn_task_complete"
            android:text="完成"/>
    </LinearLayout>
</LinearLayout>
